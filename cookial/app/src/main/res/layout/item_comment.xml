<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cmt_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_cmt_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@tools:sample/avatars"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_cmt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="kien_tran"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/cv_cmt_avatar"
        app:layout_constraintTop_toTopOf="@id/cv_cmt_avatar"/>

    <TextView
        android:id="@+id/tv_cmt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="2 giờ"
        android:textSize="12sp"
        android:textColor="#757575"
        app:layout_constraintBottom_toBottomOf="@id/tv_cmt_name"
        app:layout_constraintStart_toEndOf="@id/tv_cmt_name"
        app:layout_constraintTop_toTopOf="@id/tv_cmt_name"/>

    <TextView
        android:id="@+id/tv_cmt_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Khoảnh khắc đáng yêu quá! Nhìn các bé làm bếp chuyên nghiệp ghê!!!"
        android:textColor="#333"
        android:textSize="14sp"
        android:lineSpacingExtra="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_cmt_name"
        app:layout_constraintTop_toBottomOf="@id/tv_cmt_name"/>

    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trả lời"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#555"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tv_cmt_content"
        app:layout_constraintTop_toBottomOf="@id/tv_cmt_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>